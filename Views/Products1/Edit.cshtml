@model MVC01.Models.Northwind.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(excludePropertyErrors: true)
    <fieldset>
        <legend>@ViewBag.Title</legend>
        @Html.HiddenFor(m => m.ProductID)
        <p>
            @Html.LabelFor(m => m.ProductName)
            @Html.TextBoxFor(m => m.ProductName)
        </p>
        <p>
            @Html.LabelFor(m => m.SupplierID)
            @Html.DropDownListFor(m => m.SupplierID, ViewBag.Suppliers as SelectList)
        </p>
        <p>
            @Html.LabelFor(m => m.UnitPrice)
            @Html.TextBoxFor(m => m.UnitPrice)
        </p>
        <p>
            @Html.LabelFor(m => m.CategoryID)
            @Html.DropDownListFor(m => m.CategoryID, ViewBag.Categories as SelectList)
        </p>
        <p><input type="submit" value="Save" /></p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
